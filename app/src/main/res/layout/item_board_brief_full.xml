<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/online_board_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/online_board_item_cover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/board_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/default_artist" />

    <TextView
        android:id="@+id/online_board_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="1"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/online_board_item_1_st_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/online_board_item_cover"
        app:layout_constraintTop_toTopOf="@id/online_board_item_cover"
        tools:text="test" />

    <TextView
        android:id="@+id/online_board_item_1_st_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="1"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/online_board_item_2_nd_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/online_board_item_cover"
        app:layout_constraintTop_toBottomOf="@+id/online_board_item_title"
        tools:text="test" />

    <TextView
        android:id="@+id/online_board_item_2_nd_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="1"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/online_board_item_3_rd_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/online_board_item_cover"
        app:layout_constraintTop_toBottomOf="@+id/online_board_item_1_st_text"
        tools:text="test" />

    <TextView
        android:id="@+id/online_board_item_3_rd_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@id/online_board_item_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/online_board_item_cover"
        app:layout_constraintTop_toBottomOf="@+id/online_board_item_2_nd_text"
        tools:text="test" />

</androidx.constraintlayout.widget.ConstraintLayout>